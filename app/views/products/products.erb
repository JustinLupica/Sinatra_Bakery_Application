    <div id="wrapper">
        <!-- Main -->
        <section id="main" class="wrapper">
            <div class="inner">
                <h4> Welcome, <%= session[:username] %>.</h4>
                <h1 class="major">Products</h1>
                <form action="/products/new">
            <input type="submit" value="Add New Product" />
          </form>
                <p>
                    This page will be used to view orders that have been logged
                    in the database. You might just be able to sort/filter orders
                    to better find the one you are looking for. You can also create
                    a new order by clicking on the 'New Order' button.
                </p>
            </div>
        </section>

        <section class="formInputs">
        <table id="orderTable" class="orderLog">
            <thead>
                <th>ID</th>
                <th>Product Category</th>
                <th>Product Flavor</th>
                <th>Product Size</th>
                <th>Quantity</th>
            </thead>
            <tbody id="orderTable">
                <% @products.each do |product| %>
                <tr> 
                        <td><%= product.id %> </td>
                        <td><%= product.product_category %> </td>
                        <td><%= product.product_flavor %> </td>
                        <td><%= product.product_size %> </td>
                        <td><%= product.quantity %> </td>
                        <td><a href="/products/<%=product.id%>"><i class="fas fa-external-link-square-alt"></i></a></td>
                </tr>
                <% end %>
            </tbody>
        </table>
        </section>
    </div>